# ── DB ────────────────────────────────────────────────────────
DATABASE_URL=postgresql://stockmind:stockmind@localhost:5432/stockmind

# ── 크롤링 설정 ───────────────────────────────────────────────
YF_MAX_SCROLL=10
YF_MAX_ARTICLES=30

# ── 주가 수집 설정 ────────────────────────────────────────────
PRICE_PERIOD=5d
PRICE_INTERVAL=1d

# ── Selenium 원격 사용 여부 (docker-compose 환경에서 true) ─────
USE_REMOTE_WEBDRIVER=false
SELENIUM_REMOTE_URL=http://selenium:4444

# ── API ───────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
